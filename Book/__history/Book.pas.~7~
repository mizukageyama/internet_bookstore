unit Book;

interface

type
  [MVCNameCase(ncCamelCase)]
  [MVCTable('book')]
  TBook = class
  private
    [MVCTableField('ID')]
    FId: Integer;
    [MVCTableField('TITLE')]
    FTitle: string;
    [MVCTableField('SYNOPSIS')]
    FSynopsis: string;
  public
    property Id: Integer read FId;
    property Title: string read FTitle;
    property Synopsis: string read FSynopsis;
  end;

implementation

end.
