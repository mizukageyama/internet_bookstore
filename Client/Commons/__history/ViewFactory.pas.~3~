unit ViewFactory;

interface

uses  BookDetailsFrm, WriteReviewFrm, System.SysUtils, System.Classes;

type
  IViewFactory = interface
    function CreateBookDetailsView: TBookDetailsView;
    function CreateWriteReviewView: TWriteReviewView;
  end;

  TConcreteViewFactory = class(TInterfacedObject, IViewFactory)
  public
    function CreateBookDetailsView: TBookDetailsView;
    function CreateWriteReviewView: TWriteReviewView;
  end;

implementation

function TConcreteViewFactory.CreateBookDetailsView: TBookDetailsView;
begin
  Result := TBookDetailsView.Create(nil);
end;

function TConcreteViewFactory.CreateWriteReviewView: TWriteReviewView;
begin
  Result := TWriteReviewView.Create(nil);
end;

end.
