unit BookRepositoryIntf;

interface

uses
  Book, System.Generics.Collections, MVCFramework.RESTClient.Intf,
  MVCFramework.RESTClient, JSON;

type
  IBookRepository = interface
    function CreateBook(const RequestBody: TJSONObject): TMVCRESTResponse;
    function GetBooks: TMVCRESTResponse;
    function GetBookById(const BookId: Integer): TMVCRESTResponse;
    function UpdateBook(const RequestBody: TJSONObject): TMVCRESTResponse;
    function DeleteBook(const BookId: Integer): TMVCRESTResponse;
  end;

implementation

end.
