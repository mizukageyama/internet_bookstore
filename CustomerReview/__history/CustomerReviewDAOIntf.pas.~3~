unit CustomerReviewDAOIntf;

interface

uses
  System.Generics.Collections, CustomerReview;

type
  ICustomerReviewDAO = interface
    procedure CreateCustomerReview(const Customer: TCustomerReview);
    function GetCustomerReviewsByBookId: TObjectList<TCustomerReview>;
    function GetCustomerById(const CustomerReviewId: Integer): TCustomerReview;
    procedure UpdateCustomer(const CustomerReviewId: Integer;
      const Customer: TCustomerReview);
    procedure DeleteCustomer(const CustomerReviewId: Integer);
  end;

implementation

end.
