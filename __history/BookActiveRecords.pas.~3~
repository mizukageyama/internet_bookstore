unit BookActiveRecords;

interface

type
  [MVCNameCase(ncCamelCase)]
  [MVCTable('book')]
  TBook = class
  private
    [MVCTableField('ID', [foPrimaryKey, foAutoGenerated])]
    FId: Integer;
    [MVCTableField('TITLE')]
    FTitle: string;
    [MVCTableField('SYNOPSIS')]
    FSynopsis: string;
  end;

implementation

end.

